<!doctype html>
<html>
  <head>
    <title>Add book to <%=shopData.shopName%></title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
  </head>
  <body>
    <h1><%=shopData.shopName%>: Add book</h1>

    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
      <ul>
        <% errors.forEach(function(error) { %>
          <li style="color: red"><%= error.msg %></li>
        <% }) %>
      </ul>
    <% } %>

    <form method="POST" action="bookadded">
        <p>Book name: <input id="name" type="text" name="name" value="" /></p>
        <p>Price: <input id="price" type="text" name="price" value="" /></p>
        <input type="submit" value="Add Book" />
      </form>
  </body>
</html>

