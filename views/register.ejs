<!doctype html>
<html>
  <head>
    <title>Register for <%=shopData.shopName%></title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
  </head>
  <body>
    <h1>Register for <%=shopData.shopName%></h1>

    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
      <ul>
        <% errors.forEach(function(error) { %>
          <li style="color: red"><%= error.msg %></li>
        <% }) %>
      </ul>
    <% } %>

    <form method="POST" action="registered">
        <p>First name: <input id="first" type="text" name="first" /></p>
        <p>Last name: <input id="last" type="text" name="last"/></p>
        <p>Username: <input id="username" type="text" name="username" /></p>
          <!-- Display errors, if any -->
        <p>Password: <input id="password" type="text" name="password"/></p>
        <p>Email: <input id="email" type="text" name="email"/></p>
        <input type="submit" value="Register" />
      </form>
  </body>
</html>